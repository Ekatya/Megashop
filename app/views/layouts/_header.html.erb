<div class="header">
  <div class="container_12">
    <div class="grid_8">
      <h3 class="title"><%= link_to 'Megashop', root_path %></h3>
    </div>
    <div class="grid_4">  
 
      <%= form_tag('/products', method: :get) do %>
        <%= text_field_tag :search,'',placeholder: "Поиск товара" %>
        <br>Цена от:
        <%= select_tag :price_min, options_for_select((Product.all.map { |p| p.price }).sort, 0) %>
      <span>Цена до:</span>
      <%= select_tag :price_max, options_for_select(Product.all.map { |p| p.price },  @max_price) %>
        <%= submit_tag 'Найти' %>
      <% end %>
    </div>
    <div class="grid_4">
      Корзина: <%= current_cart.id %>
      <br/>
      
    </div>
    </div>
  </div>
</div>