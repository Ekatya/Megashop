<div class="grid_12">
    <h2>Товары</h2>
    <div class="sorting">
      <b>Сортировать по цене:</b> 
      <%= link_to 'по возрастанию', root_path(sort: 'price_asc') %>
      <%= link_to ' по убыванию', root_path(sort: 'price_desc') %>
    </div>
</div>

<div class="products">

    <% @products.each do |product| %>

      <div class="product grid_3">
      <%= link_to image_tag(product.image_url(:thumb) || 'product_blank.gif'), product %>
       <%= link_to product.name, product %>

        <div class="price">
            <%= number_to_currency(product.price, precision: 2, unit: "грн.", separator: ",", delimiter: " ", format: "%n %u") %>
        </div>
        
        
        <%= button_to 'Добавить в корзину', {controller: 'items', action: 'create', product_id: product.id}, class: 'add_to_cart' %>

        </div>
    <% end %>

</div>
<%= will_paginate @products %>