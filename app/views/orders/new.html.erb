<h3>Оформление заказа</h3>

<%= form_for(@order) do |f| %>


  <div>
    <%= f.label :user_name %><br>
    <%= f.text_field :user_name %>
  </div>
  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :adress %><br>
    <%= f.text_area :adress, rows: 3, cols: 40 %>
  </div>
  <div>
    <%= f.submit 'Оформить' %>
  </div>
<% end %>

<% if @order.errors.any? %>
    <div>
      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

